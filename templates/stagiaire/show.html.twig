{% extends 'base.html.twig' %}

{% block contenu %}
<a type="button" href="{{ path('stagiaire')}}" class="btn" style="padding-left: 0;"><i class="fas fa-arrow-left" style="font-size: 3rem"></i></a>
	<p>{{ stagiaire.nom ~ ' ' ~ stagiaire.prenom }}</p>
	<p>Civilité : {{ stagiaire.civilite }}</p>
	<p>Adresse mail : <a href="mailto:{{ stagiaire.email }}">{{ stagiaire.email }}</a></p>
	<p>Téléphone : {{ stagiaire.telephone }}</p>
	<p>Date de naissance : {{ stagiaire.dateNaissance | date ('d/m/Y') }}</p>
	<p>Ville : {{ stagiaire.ville }}</p>
	<p>Adresse : {{ stagiaire.adresse }}</p>
	<p>Code Postal : {{ stagiaire.cp }}</p>
    {# <a type="button" class="btn btn-warning" href="{{ path('app_changepassword', {'id':app.user.id}) }}">Modifier MDP</a> #}
{% endblock %}
