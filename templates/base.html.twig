<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		{% block stylesheets %}
			<link href="https://stackpath.bootstrapcdn.com/bootswatch/4.5.2/lux/bootstrap.min.css" rel="stylesheet">
			<link href="{{ asset('css/style.css') }}" type="text/css" rel="stylesheet">
		{% endblock %}
	</head>
	<body>
		{% block body %}
					{% if app.user %}
						{# {% if is_granted('ROLE_ADMIN') %} #}
			<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
				<a class="navbar-brand" href="{{ path('annuaire') }}">
					<img src="{{ asset('images/sharpener.svg') }}" width="30" height="30" alt="">
					ExoGestionBinome</a>
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>

				<div class="collapse navbar-collapse" id="navbarSupportedContent">
					<form class="form-inline my-2 my-lg-0">
						<input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
						<button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
					</form>


							<ul class="navbar-nav">
								<li class="nav-item">
									<p class="nav-link">Bienvenue
										{{ app.user.prenom ~ ' ' ~ app.user.nom }}</p>
								</li>
								<li class="nav-item active">
									<a class="nav-link" href="{{ path('annuaire_show', {'id':app.user.id}) }}">MON PROFIL
									</a>
								</li>
								<li class="nav-item">
									<a class="nav-link" href="{{ path('app_logout') }}">DECONNEXION</a>
								</li>
							</ul>


				</div>
			</nav>
			<div class="wrapper0">
				<div class="wrapper1">
					<div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
						<a class="nav-link btn" href="{{ path('stagiaire')}}">Stagiaires</a>
						<a class="nav-link btn" href="{{ path('formation')}}">Formations</a>
						<a class="nav-link btn" href="{{ path('annuaire')}}">Annuaire</a>
						{% if is_granted('ROLE_ADMIN') %}
						<a class="nav-link btn" href="{{ path('categorie')}}">Categories</a>
						<a class="nav-link btn" href="{{ path('session')}}">Sessions</a>
						<a class="nav-link btn" href="{{ path('module')}}">Modules</a>
						{% endif %}
					</div>
				</div>
			<div class="wrapper2"> {% block contenu %}{% endblock %}
				</div>
			</div>
			{% block javascripts %}{% endblock %}
			<script src="https://kit.fontawesome.com/96b70f9c88.js" crossorigin="anonymous"></script>
						{% else %}

							<h1>Veuillez vous <a type="button" class="btn btn-success" href="{{ path('app_login') }}">CONNECTER</a></h1>

						{# {% endif %} #}
					{% endif %}
			{% endblock %}
		</body>
	</html>
