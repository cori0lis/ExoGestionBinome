{% extends 'base.html.twig' %}

{% block contenu %}
	<h1>Annuaire des Employ√©s</h1>
	<a type="button" class="btn btn-success ajouter" href="
		
		{{ path('app_register')}}
		
		">Ajouter</a>


	<table class="table">
		<tr>
			<th>NOM</th>
			<th>PRENOM</th>
			{# <th>ROLE</th> #}
			<th>CIVILITE</th>
			<th>EMAIL</th>
			<th>TELEPHONE</th>
			<th>DATE DE NAISSANCE</th>
			<th>VILLE</th>
			<th>ADRESSE</th>
			<th>CP</th>
			<th>Modifier</th>
			<th>Supprimer</th>
		</tr>
	</thead>
	<tbody>
		{% for utilisateur in utilisateurs %}
			<tr>
				<td><a href="{{ path('annuaire_show', {'id':utilisateur.id}) }}">{{ utilisateur.nom }}</a></td>
				<td>{{ utilisateur.prenom }}</td>
				{# <td>{{ utilisateur.role }}</td> #}
				<td>{{ utilisateur.civilite }}</td>
				<td><a href="mailto:{{ utilisateur.email }}">{{ utilisateur.email }}</a></td>
				<td>{{ utilisateur.telephone }}</td>
				<td>{{ utilisateur.dateNaissance | date ('d/m/Y') }}</td>
				<td>{{ utilisateur.ville }}</td>
				<td>{{ utilisateur.adresse }}</td>
				<td>{{ utilisateur.cp }}</td>
				<td>
					<a type="button" class="btn btn-warning" href="
						                {# {{ path('utilisateur_edit', {'id':utilisateur.id}) }} #}
						                ">Modifier</a>
				</td>
				<td>
					<a type="button" class="btn btn-danger" href="
						                {# {{ path('utilisateur_delete', {'id':utilisateur.id}) }} #}
						                ">Supprimer</a>
				</td>
			</tr>
		{% endfor %}
	</tbody>
</table>{% endblock %}
