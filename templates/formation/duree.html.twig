{% extends 'base.html.twig' %}

{% block contenu %}
<a type="button" onclick="history.go(-1);" class="btn" style="padding-left: 0;">
		<i class="fas fa-arrow-left" style="font-size: 3rem"></i>
	</a>
	<h2>{{ formation.nom }}</h2>

	{{form_start(form)}}

	<ul id="gestionDurees" data-prototype="{{ form_row(form.durees.vars.prototype)|e }}">

		{% for module in form.durees %}
			<li class="gestionDuree">
				{{form_row(module)}}
			</li>
		{% endfor %}
	</ul>

    {{form_row(form.valider)}}

    {{ form_end(form)}}

	
{% endblock %}

{% block javascripts %}
    {{parent()}}
    <script src="/js/collectionHandlerDuree.js"></script>
	<script language="JavaScript" type="text/javascript">
document.getElementById("coloredselect2").style.background = "yellow";
document.getElementById("coloredselect2").style.color = "black";
</script>
{% endblock %}
